<?xml version="1.0"?>
<configuration>

    <!-- Factor de replicaciÃ³n (1 para entorno local) -->
    <property>
        <name>dfs.replication</name>
        <value>2</value>
    </property>

    <!-- Directorio del NameNode -->
    <property>
        <name>dfs.namenode.name.dir</name>
        <value>file:///hadoop/dfs/name</value>
    </property>

    <!-- Directorio del DataNode -->
    <property>
        <name>dfs.datanode.data.dir</name>
        <value>file:///hadoop/dfs/data</value>
    </property>

    <!-- Permitir acceso web al NameNode -->
    <property>
        <name>dfs.permissions.enabled</name>
        <value>false</value>
    </property>

</configuration>
